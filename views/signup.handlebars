    <div class="container">
    <div class="row">
        <form class="signup col s12">
            <h4>Sign-up</h4>
          <div class="input-field col s12 m6 l6"> 
            <input id="email-input" type="email" class="form-control">
            <label for="email-input">Email<span class="red-text" id="email_danger" style="display:none;"> *</span></label>
        
            
          </div>
          <div class="input-field col s12 m6 l6">
            <input id="password-input" type="password" class="form-control">
            <label for="password-input">Password<span class="red-text" id="password_danger" style="display:none;"> *</span></label>
          </div>
          {{!-- <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg"></span>
          </div> --}}
          <div class="input-field col s12 m6 l6">
            <input id="first_name" type="text" class="form-control">
            <label for="first_name">First Name<span class="red-text" id="first_name_danger" style="display:none;"> *</span></label>
          </div>
          <div class="input-field col s12 m6 l6">
            <input id="last_name" type="text" class="form-control">
            <label for="last_name">Last Name<span class="red-text" id="last_name_danger" style="display:none;"> *</span></label>
          </div>
          
          <div class="input-field col s12 m6 l6">
            <input id="display-name" type="text" class="form-control">
            <label for="display-name">Nickname<span class="red-text" id="display-name_danger" style="display:none;"> *</span></label>
          </div>

          <div class="input-field col s12 m6 l6">
            <input type="text" class="datepicker" id="DOB">
            <label for="DOB">Date of Birth<span class="red-text" id="DOB_danger" style="display:none;"> *</span></label>
          </div>

          <div class="input-field col s12 m6 l6">
            <select class="gender" name="gender" id="gender">
                <option value="" disabled selected></option>
                <option value="M">Male</option>
                <option value="F">Female</option>
            </select>
            <label for="gender">Gender<span class="red-text" id="gender_danger" style="display:none;"> *</span></label>
          </div>

          <div class="input-field col s12 m6 l6">
            <select class="gender" name="account-type" id="account-type">
                <option value="" disabled selected></option>
                <option value="E">Elder</option>
                <option value="A">Attendee</option>
            </select>
            <label for="account-type">Account Type<span class="red-text" id="account_danger" style="display:none;"> *</span></label>
          </div>

          <div class="input-field col s12 m6 l6">
            <input id="zip-code" type="text" class="form-control">
            <a class="waves-effect waves-light btn-small" id="getzipcode">Auto-Detect</a>
            <label for="zip-code">Zip Code<span class="red-text" id="zip_danger" style="display:none;"> *</span></label>
          </div>
        
        <div class="row">
          <div class="col s12 m12 l12">
            <button type="submit" class="btn btn-default">Sign-Up</button>
          </div>
        </div>
        </form>
